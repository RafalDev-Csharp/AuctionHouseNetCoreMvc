@model SellItem

@{
	ViewData["Title"] = "SellItem";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Sell Item</h2>
<br />

<form method="post" asp-action="PostItem" enctype="multipart/form-data">
	<div class="border backgroundDark row">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<input type="hidden" asp-for="@Model.Id" />
		<input type="hidden" asp-for="@Model.GameItemId" />
		<input type="hidden" asp-for="@Model.InventoryId" />
		<input type="hidden" asp-for="@Model.GameItemVP" />
		<input type="hidden" asp-for="@Model.GameItemVP.Count" />
		
		<input type="hidden" asp-for="@Model.SellerId" />
		<input type="hidden" asp-for="@Model.SellerName" />
		<input type="hidden" asp-for="@Model.GameItemVP.Image" />
		<input type="hidden" asp-for="@Model.DateTimeEnd" />

		<div class="col-9">
			<div class="form-group row">
				<div class="col-3">
					<label class="col-form-label">Nuber of Owned Items</label>
				</div>
				<div class="col-5">
					<input disabled asp-for="@Model.GameItemVP.Count" class="form-control" />
				</div>
			</div>
			<div class="form-group row">
				<div class="col-3">
					<label class="col-form-label">Count Of Items To Sell</label>
				</div>
				<div class="col-5">
					<input asp-for="@Model.CountOfItemsToSell" class="form-control" />
				</div>
				<span asp-validation-for="@Model.CountOfItemsToSell" class="text-danger"></span>
			</div>
			<div class="form-group row">
				<div class="col-3">
					<label asp-for="@Model.Price" class="col-form-label"></label>
				</div>
				<div class="col-5">
					<input asp-for="@Model.Price" class="form-control" />
				</div>
				<span asp-validation-for="@Model.Price" class="text-danger"></span>
			</div>
			<div class="form-group row">
				<div class="col-3">
					<label asp-for="@Model.Days" class="col-form-label"></label>
				</div>
				<div class="col-5">
					<input asp-for="@Model.Days" class="form-control" />
				</div>
				<span asp-validation-for="@Model.Days" class="text-danger"></span>
			</div>
			<div class="form-group row">
				<div class="col-3">
					<label asp-for="@Model.GameItemVP.Name" class="col-form-label"></label>
				</div>
				<div class="col-5">
					<input asp-for="@Model.GameItemVP.Name" class="form-control" />
				</div>
				<span asp-validation-for="@Model.GameItemVP.Name" class="text-danger"></span>
			</div>
		</div>
		
		<div class="col-3">
			<img src="@Model.GameItemVP.Image" width="100%" style="border-radius:5px;border:1px solid #bbb9b9;" />
		</div>


		<div class="form-group col-12">
			<div class="row">
				<div class="col-4">
					<input type="submit" class="btn btn-info form-control" value="Sell" />
				</div>
				<div class="col-4">
					<a asp-action="Index" class="btn btn-success form-control">Back to List</a>
				</div>
			</div>
		</div>

	</div>
</form>






