@model AuctionHouseApp.Models.Inventory
@using AuctionHouseApp.Extension
@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Add Item(s) to inventory</h2>
<br />

<form method="post" asp-action="AddToInventory" enctype="multipart/form-data">
	<div class="border backgroundDark">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<input type="hidden" asp-for="@Model.Id" />
		<input type="hidden" asp-for="@Model.GameItemVP.Id" />
		<input type="hidden" asp-for="@Model.GameItemVP" />
		<input type="hidden" asp-for="@Model.GameItemId" />
		<input type="hidden" asp-for="@Model.GameUserId" />
		<input type="hidden" asp-for="@Model.GameItemVP.Image" />
		<input type="hidden" asp-for="@Model.GameItemVP.Name" />
		<input type="hidden" asp-for="@Model.GameItemVP.PremiumCurrencyPrice" />
		
		<div class="row">
			<div class="col-9">
				<div class="form-group row">
					<div class="col-3">
						<label asp-for="@Model.Count" class="col-form-label"></label>
					</div>
					<div class="col-5">
						<input asp-for="@Model.Count" class="form-control" />
					</div>
					<span asp-validation-for="@Model.Count" class="text-danger"></span>
				</div>

				<div class="form-group row">
					<div class="col-3">
						<label asp-for="@Model.GameItemVP.CategoryVP.Name" class="col-form-label"></label>
					</div>
					<div class="col-5">
						<input asp-for="@Model.GameItemVP.CategoryVP.Name" class="form-control" />
					</div>
					<span asp-validation-for="@Model.GameItemVP.CategoryVP.Name" class="text-danger"></span>
				</div>
				<div class="form-group row">
					<div class="col-3">
						<label asp-for="@Model.GameItemVP.SubCategoryVP.Name" class="col-form-label"></label>
					</div>
					<div class="col-5">
						<input asp-for="@Model.GameItemVP.SubCategoryVP.Name" class="form-control" />
					</div>
					<span asp-validation-for="@Model.GameItemVP.SubCategoryVP.Name" class="text-danger"></span>
				</div>
				<div class="form-group row">
					<div class="col-3">
						<label asp-for="@Model.GameItemVP.ItemQualityVP.Name" class="col-form-label"></label>
					</div>
					<div class="col-5">
						<input asp-for="@Model.GameItemVP.ItemQualityVP.Name" class="form-control" />
					</div>
					<span asp-validation-for="@Model.GameItemVP.ItemQualityVP.Name" class="text-danger"></span>
				</div>
				<div class="form-group row">
					<div class="col-3">
						<label asp-for="@Model.GameItemVP.ForWhichClassItemVP.Name" class="col-form-label"></label>
					</div>
					<div class="col-5">
						<input asp-for="@Model.GameItemVP.ForWhichClassItemVP.Name" class="form-control" />
					</div>
					<span asp-validation-for="@Model.GameItemVP.ForWhichClassItemVP.Name" class="text-danger"></span>
				</div>
				<div class="form-group row">
					<div class="col-3">
						<label asp-for="@Model.GameItemVP.LevelRequired" class="col-form-label"></label>
					</div>
					<div class="col-5">
						<input asp-for="@Model.GameItemVP.LevelRequired" class="form-control" />
					</div>
					<span asp-validation-for="@Model.GameItemVP.LevelRequired" class="text-danger"></span>
				</div>

				<div class="form-group row">
					<div class="col-3">
						<label asp-for="@Model.GameItemVP.PremiumCurrencyPrice" class="col-form-label"></label>
					</div>
					<div class="col-5">
						<input disabled asp-for="@Model.GameItemVP.PremiumCurrencyPrice" class="form-control" />
					</div>
				</div>
			</div>

			<div class="col-3">
				<img src="@Model.GameItemVP.Image" width="100%" style="border-radius:5px;border:1px solid #bbb9b9;" />
			</div>
		</div>


		<div class="form-group row">
			<div class="col-5 offset-2">
				<div class="row">
					<div class="col-6">
						<input type="submit" class="btn btn-info form-control" value="Add Item(s)" />
					</div>
					<div class="col-6">
						<a asp-action="Index" class="btn btn-success form-control">Back to List</a>
					</div>
				</div>
			</div>
		</div>

	</div>
</form>






