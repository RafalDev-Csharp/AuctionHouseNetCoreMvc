@model IEnumerable<CurrencyBundle>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundDark">
	<div class="row">
		<div class="col-6">
			<h2 class="text-info"> Currency Bundle List</h2>
		</div>
		<div class="col-6 text-right">
			<partial name="_CreateButtonPartial" />
		</div>
	</div>
	<br />
	<div>
		@if (Model.Count() > 0)
		{
			<table class="table table-striped border">
				<tr>
					<th>
						@Html.DisplayNameFor(c => c.Id)
					</th>
					<th>
						@Html.DisplayNameFor(c => c.CashValue)
					</th>
					<th>
						@Html.DisplayNameFor(c => c.GameCurrencyAmount)
					</th>
					<th>
						@Html.DisplayNameFor(c => c.BonusCurrency)
					</th>
					<th>
						Manage
					</th>
				</tr>
				@foreach (var currencyBundle in Model)
				{
					<tr>
						<th>
							@Html.DisplayFor(c => currencyBundle.Id)
						</th>
						<td>
							<strong>@Html.DisplayFor(c => currencyBundle.CashValue)$</strong>
						</td>
						<th>
							@Html.DisplayFor(c => currencyBundle.GameCurrencyAmount)
						</th>
						<th>
							@Html.DisplayFor(c => currencyBundle.BonusCurrency)
						</th>
						<partial name="_TableButtonPartial" model="currencyBundle.Id" />
					</tr>
				}
			</table>
		}
		else
		{
			<span>No item exists...</span>
		}
	</div>
</div>



