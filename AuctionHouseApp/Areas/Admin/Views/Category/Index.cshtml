@model IEnumerable<Category>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundDark">
	<div class="row">
		<div class="col-6">
			<h2 class="text-info"> Category List</h2>
		</div>
		<div class="col-6 text-right">
			<partial name="_CreateButtonPartial" />
		</div>
	</div>
	<br />
	<div>
		@if (Model.Count() > 0)
		{
			<table class="table table-striped border">
				<tr>
					<th>
						@Html.DisplayNameFor(c => c.Name)
					</th>
					<th></th>
					<th></th>
				</tr>
				@foreach (var category in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(c => category.Name)
						</td>
						<td></td>
						<partial name="_TableButtonPartial" model="category.Id" />
					</tr>
				}
			</table>
		}
		else
		{
			<span>No category exists...</span>
		}
	</div>
</div>

