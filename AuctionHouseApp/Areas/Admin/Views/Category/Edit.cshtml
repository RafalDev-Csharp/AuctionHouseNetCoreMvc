@model AuctionHouseApp.Models.ViewModels.CategoryPlusErrorMsgViewModel

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Edit Category</h2>
<br />

<partial name="_ErrorMessage" model="Model.StatusMessage" />

<form method="post" asp-action="Edit">
	<input type="hidden" asp-for="@Model.Category.Id" />
	<div class="border backgroundDark">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Category.Name" class="col-form-label"></label>
			</div>
			<div class="col-5">
				<input asp-for="Category.Name" class="form-control" />
			</div>
			<span asp-validation-for="Category.Name" class="text-danger"></span>
		</div>
		<div class="form-group row">
			<partial name="_EditAndBackToListButton" model="@Model.Category.Id"/> 
		</div>
	</div>
</form>

