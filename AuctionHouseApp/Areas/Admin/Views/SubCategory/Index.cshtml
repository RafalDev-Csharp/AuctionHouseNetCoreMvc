@model IEnumerable<SubCategory>

@{
	ViewData["Title"] = "Index";
}

<br />
<br />
<div class="border backgroundDark">
	<div class="row">
		<div class="col-6">
			<h2 class="text-info">Sub Category List</h2>
		</div>
		<div class="col-6 text-right">
			<partial name="_CreateButtonPartial" />
		</div>
	</div>
	<br />
	<div>
		@if (Model.Count() > 0)
		{
			<table class="table table-striped border">
				<tr>
					<th>
						@Html.DisplayNameFor(c=>c.CategoryVP.Name)
					</th>
					<th>
						@Html.DisplayNameFor(c => c.Name)
					</th>
					<th></th>
				</tr>
				
				@foreach (var subCategory in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(c => subCategory.CategoryVP.Name)
						</td>
						<td>
							@Html.DisplayFor(c => subCategory.Name)
						</td>
						<partial name="_TableButtonPartial" model="subCategory.Id" />
					</tr>
				}
			</table>
		}
		else
		{
			<span>No subcategory exists...</span>
		}
	</div>
</div>

