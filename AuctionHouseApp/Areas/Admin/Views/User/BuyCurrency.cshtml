@model GameUser
@{
	ViewData["Title"] = "BuyCurrency";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Buy Currency</h2>
<br />

<form method="post" asp-action="BuyCurrency">
	<div class="border backgroundDark">
		<input asp-for="@Model.Id" type="hidden" class="form-control" />
		<input asp-for="@Model.Name" type="hidden" class="form-control" />
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		

		<div class="form-group row">
			<div class="col-2">
				<label asp-for="@Model.Name" class="col-form-label"></label>
			</div>
			<div class="col-5">
				<input asp-for="@Model.Name" disabled class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="@Model.Cash" class="col-form-label"></label>
			</div>
			<div class="col-5">
				<input asp-for="@Model.Cash" class="form-control" />
			</div>
			<span asp-validation-for="@Model.Cash" class="text-danger"></span>
		</div>


		<div class="form-group row">
			<div class="col-6">
				<input type="submit" class="btn btn-warning form-control" value="Get Currency!" />
			</div>
			<div class="col-6">
				<input type="submit" asp-action="Index" class="btn btn-info form-control" value="Back to List" />
			</div>
		</div>

	</div>
</form>
