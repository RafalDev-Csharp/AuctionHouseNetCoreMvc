@model GameUser

@{
	ViewData["Title"] = "RemoveUser";
}

<br />
<h2 class="text-info">Remove User</h2>
<br />

<form method="post" asp-action="RemoveUser">
	<div class="border backgroundDark">
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Id" class="col-form-label"></label>
			</div>
			<div class="col-5">
				<input asp-for="Id" disabled class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Name" class="col-form-label"></label>
			</div>
			<div class="col-5">
				<input asp-for="Name" disabled class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="RoleName" class="col-form-label"></label>
			</div>
			<div class="col-5">
				<input asp-for="RoleName" disabled class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Cash" class="col-form-label"></label>
			</div>
			<div class="col-5">
				<input asp-for="Cash" disabled class="form-control" />
			</div>
		</div>
		

		<div class="row">
			
			<div class="col-5">
				<input type="submit" class="btn btn-danger form-control" asp-route-Id="@Model.Id" value="Remove User" />
			</div>
			<div class="col-5">
				<a asp-action="Index" class="btn btn-primary btn-xs col-lg-12" style="margin-bottom:4px; word-wrap:break-word;">Back to List</a>
			</div>
		</div>

	</div>
</form>

