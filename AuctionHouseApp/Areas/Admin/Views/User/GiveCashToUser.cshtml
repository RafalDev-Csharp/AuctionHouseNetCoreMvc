@model GameUser
@{
	ViewData["Title"] = "Give Currency To User";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Give Currency To User</h2>
<br />

<form method="post" asp-action="BuyCurrency">
	<div class="border backgroundDark">
		<input asp-for="@Model.Id" type="hidden" class="form-control" />
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<div class="form-group row">
			<div class="col-2">
				<label asp-for="@Model.Name" class="col-form-label"></label>
			</div>
			<div class="col-5">
				<input asp-for="@Model.Name" disabled class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="@Model.Cash" class="col-form-label"></label>
			</div>
			<div class="col-5">
				<input asp-for="@Model.Cash" class="form-control" />
			</div>
			<span asp-validation-for="@Model.Cash" class="text-danger"></span>
		</div>

		<div class="row">
			<div class="col-5">
				<input type="submit" class="btn btn-warning form-control" value="Give currency to this user" />
			</div>
			<div class="col-5">
				<a asp-action="Index" class="btn btn-primary btn-xs col-lg-12" style="margin-bottom:4px; word-wrap:break-word;">Back to List</a>
			</div>
		</div>

	</div>
</form>
